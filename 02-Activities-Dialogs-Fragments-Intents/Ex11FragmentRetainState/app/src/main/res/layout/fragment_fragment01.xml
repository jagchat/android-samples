<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jag.ex11fragmentretainstate.Fragment01">

    <Button
        android:id="@+id/btnShowMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btnFrag01ShowMsgCaption"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btnSetMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/btnFrag01SetMessage1Caption"
        android:textAllCaps="false" />

</LinearLayout>
